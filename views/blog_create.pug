doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../styles/styles.css")
        link(rel="stylesheet", href="../styles/navbar.css")
        link(rel="stylesheet", href="../styles/blog_create.css")
        title= pageTitle
    body 
        .container
            include navbar.pug
            p.success-msg 
            p.error-msg 
            form(id="create-blog-form" class="submit-form" method="POST")
                input(class="blog-input" name="author" type="text" placeholder="Full Name")
                input(class="blog-input" name="title" type="text" placeholder="Title")
                textarea(class="blog-input" name="body" type="textarea" rows="10" cols="65" placeholder="Your feedback here")
 
                input(type="submit" value="Leave comment").create-blog
                //- button(type="submit").create-blog Save
        
        script(src="../javascripts/blogCreate.js")